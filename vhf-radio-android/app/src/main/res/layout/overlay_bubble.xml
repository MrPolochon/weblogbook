<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubble_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Expanded view: PTT button + frequency display -->
    <LinearLayout
        android:id="@+id/bubble_expanded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_bubble"
        android:padding="12dp"
        android:elevation="8dp"
        android:visibility="visible">

        <!-- Frequency label -->
        <TextView
            android:id="@+id/tv_frequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="118.000"
            android:textColor="#10B981"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Status -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RX"
            android:textColor="#9CA3AF"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_marginTop="2dp" />

        <!-- Big PTT button -->
        <ImageView
            android:id="@+id/btn_ptt"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_mic_off"
            android:background="@drawable/bg_ptt_button"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="Push to Talk" />

        <!-- Minimize button -->
        <TextView
            android:id="@+id/btn_minimize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â”"
            android:textColor="#6B7280"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Collapsed view: small circle button -->
    <ImageView
        android:id="@+id/bubble_collapsed"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/ic_radio"
        android:background="@drawable/bg_bubble_mini"
        android:padding="14dp"
        android:scaleType="fitCenter"
        android:elevation="8dp"
        android:visibility="gone"
        android:contentDescription="VHF Radio" />

</FrameLayout>
